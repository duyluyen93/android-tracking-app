<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:outlineSpotShadowColor="@color/md_blue_300"
        android:padding="10dp"
        app:shape_roundRect_borderColor="@color/md_amber_A700"
        app:shape_roundRect_borderWidth="2dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:text="17/02/2019 lúc 12:29" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/moving_icon" />

                <TextView
                    android:id="@+id/label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon1"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="Quãng đường đã đi" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_distance"
                    android:text="10 km"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/clock_icon" />

                <TextView
                    android:id="@+id/label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon2"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="15sp"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:text="Thời gian đã đi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_time"
                    android:text="10 phút"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <Button
                android:id="@+id/chitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#FFF"
                android:backgroundTint="@color/accent"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="Chi tiết" >
            </Button>
        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>
</LinearLayout>